<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔧 Device Compatibility"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <!-- Device Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📱 Device Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/device_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Device"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Version:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/android_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android 0.0"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Compatibility Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Compatibility Check"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/compatibility_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking compatibility..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Help Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❓ Need Help?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If ShopBlockr isn't working properly:\n\n1. Make sure TikTok is updated\n2. Restart both apps\n3. Re-enable accessibility service\n4. Check overlay permissions\n\nLong-press the Device Help button on the main screen to clear any stuck overlays."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="← Back to Home"
            android:background="@drawable/button_primary"
            android:textColor="@color/text_on_primary" />

    </LinearLayout>

</ScrollView>